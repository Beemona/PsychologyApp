@model PsychologyApp.Models.PsychotherapyType

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container my-5">
    <div class="row">
        <!-- Image Section -->
        <div class="col-md-4">
            <img src="/images/therapy/@(Model.Id).png"
                 alt="@Model.Name"
                 class="img-fluid rounded-4 shadow-sm"
                 style="object-fit: cover; width: 100%; height: 100%;">
        </div>

        <!-- Content Section -->
        <div class="col-md-8 d-flex flex-column justify-content-center">
            <h2 class="fw-bold mb-3">@Model.Name</h2>
            <p class="text-muted"><strong>Domain:</strong> @Model.Domain</p>
            <p class="fs-5">@Model.Description</p>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    img {
        max-height: 400px;
    }
</style>
