@model List<PsychologyApp.Models.Partner>

<h2>Our Partners</h2>

<div class="partner-container">
    @foreach (var partner in Model)
    {
        <div class="partner-card">
            <img src="@partner.PhotoUrl" alt="@partner.Name" class="partner-photo" />
            <h3>@partner.Name</h3>
            <p><strong>Psychology Type:</strong> @partner.PsychologyType?.Name</p>
            <p><strong>Psychotherapy Type:</strong> @partner.PsychotherapyType?.Name</p>
            <p><strong>Tags:</strong> @partner.Tags</p>
        </div>
    }
</div>

<style>
    .partner-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }
    .partner-card {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        width: 200px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .partner-photo {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
    }
</style>
