@model PsychologyApp.Models.Partner

<div class="profile-container">
    <div class="profile-header">
        <img src="@Model.PhotoUrl" alt="@Model.Name" class="profile-photo" />
        <h1>@Model.Name</h1>
        <p><strong>Psychology Type:</strong> @Model.PsychologyType?.Name ?? "N/A"</p>
        <p><strong>Psychotherapy Type:</strong> @Model.PsychotherapyType?.Name ?? "N/A"</p>
    </div>

    <div class="profile-grid">
        <!-- Left Column -->
        <div class="left-column">
            <h3>Details</h3>
            <p><strong>Working With:</strong> @*@Model.WorkingWith ??*@ "N/A"</p>
            <p><strong>Specialized In:</strong> @*@Model.SpecializedIn ??*@ "N/A"</p>
                <p><strong>Availability:</strong>@* @(Model.IsRemote ? "Remote" :*@ "On-Site")</p>
        </div>

        <!-- Center Section -->
        <div class="center-column">
            <h2>About @Model.Name</h2>
            <p>@*@Model.Description ?? *@"No description available."</p>
        </div>

        <!-- Right Column -->
        <div class="right-column">
            <h3>Curriculum Vitae</h3>
            <p><strong>Education:</strong>
                @* @Model.Education ?? *@
                "N/A" 
                </p>
            <p><strong>Current Workplace:</strong> 
                @* @Model.Workplace ??  *@
                "N/A"</p>
            <p><strong>Diplomas:</strong>
                @* @Model.Diplomas ?? *@
                "N/A"</p>
            <p><strong>Publications:</strong> 
                @* @Model.Publications ?? *@
                "N/A"</p>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        padding: 20px;
        color: #333;
    }

    .profile-container {
        max-width: 1200px;
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .profile-photo {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
        border: 4px solid #4caf50;
    }

    .profile-grid {
        display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .left-column, .center-column, .right-column {
        background: #fafafa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .left-column h3, .right-column h3 {
        margin-bottom: 15px;
        color: #4caf50;
    }

    .center-column h2 {
        color: #333;
        margin-bottom: 15px;
    }

    p {
        margin: 10px 0;
        line-height: 1.6;
    }

    strong {
        color: #555;
    }

   
</style>
