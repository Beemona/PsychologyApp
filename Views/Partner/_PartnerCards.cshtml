@model List<PsychologyApp.Models.Partner>

<div class="partner-container">
    @if (!Model.Any())
    {
        <p>No partners found matching your criteria.</p>
    }
    else
    {
        @foreach (var partner in Model)
        {
            <div class="partner-card">
                <div class="card-image">
                    <img src="@partner.PhotoUrl" alt="@partner.Name" class="partner-photo" />
                </div>
                <div class="card-content">
                    <h3>@partner.Name</h3>
                    <p class="psychology"><strong>@(partner.PsychologyType?.Name ?? "N/A")</strong> </p>
                    <p class="psychotherapy"><strong>@(partner.PsychotherapyType?.Name ?? "N/A")</strong> </p>
                    <p class="tags">@partner.Tags</p>
                </div>
            </div>
        }
    }
</div>

<style>
    .partner-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .partner-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .partner-card:hover {
            transform: translateY(-10px);
        }

    .card-image {
        width: 100%;
        height: 180px;
        overflow: hidden;
    }

    .partner-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .partner-card:hover .partner-photo {
        transform: scale(1.1);
    }

    .card-content {
        padding: 15px;
        text-align: center;
    }

        .card-content h3 {
            margin: 10px 0;
            font-size: 1.4em;
            color: #333;
        }

    .psychology {
        color: #3674B5;
        margin: 5px 0;
        font-size: 0.9em;
    }

    .psychotherapy {
        color: #16325B;
        margin: 5px 0;
        font-size: 0.9em;
    }

    .tags {
        background: #DDEB9D;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.85em;
        color: #3E7B27;
        display: inline-block;
        margin-top: 10px;
    }
</style>
